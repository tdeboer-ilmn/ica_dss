/* This file is the descriptor for the Custom python dataset illumina_ica-data */
{
    "meta" : {
        // label: name of the dataset type as displayed, should be short
        "label": "ica-data",

        // description: longer string to help end users understand what this dataset type is
        "description": "The complete list of files from Illumina's ICA",

        // icon: must be one of the FontAwesome 3.2.1 icons, complete list here at https://fontawesome.com/v3.2.1/icons/
        "icon": "icon-hdd"
    },

    /* Can this connector read data ? */
    "readable": true,
    /* Can this connector write data ? */
    "writable": false,


    /* params:
    DSS will generate a formular from this list of requested parameters.
    Your component code can then access the value provided by users using the "name" field of each parameter.

    Available parameter types include:
    STRING, INT, DOUBLE, BOOLEAN, DATE, SELECT, TEXTAREA, PRESET and others.

    For the full list and for more details, see the documentation: https://doc.dataiku.com/dss/latest/plugins/reference/params.html
    */
    "params": [
        /* A "SELECT" parameter is a multi-choice selector. Choices are specified using the selectChoice field*/
        {
            "name": "method",
            "label": "Retrieval method",
            "description": "Method for retrieving the dataset data",
            "type": "SELECT",
            "defaultValue": "ica",
            "selectChoices": [
                {
                    "value": "ica",
                    "label": "ICA volume & files ICA (GDS)"
                },
                {
                    "value": "bgp",
                    "label": "Legacy bluebee API"
                }
            ]
        },
        {
            "name": "server",
            "label": "ICA server",
            "type": "SELECT",
            "selectChoices": [
                { "value": "use1", "label": "use1.platform.illumina.com" },
                { "value": "integration", "label": "integration.stratus.illumina.com" }
            ],
            "visibilityCondition" : "model.method == 'ica'"
        }
    ]
}
